<script>
// Inject topic metadata for JavaScript access
const topicsMeta = {{ topicsMeta | dump | safe }};

// localStorage utilities with TTL
function saveScreenerResults(scores) {
  try {
    const data = {
      scores: scores,
      timestamp: Date.now(),
      expiresAt: Date.now() + (24 * 60 * 60 * 1000) // 24 hours
    };
    localStorage.setItem('longevityScreenerResults', JSON.stringify(data));
  } catch (e) {
    console.error('Failed to save screener results:', e);
  }
}

function saveScreenerProgress(formData) {
  try {
    const data = {
      formData: formData,
      timestamp: Date.now(),
      expiresAt: Date.now() + (24 * 60 * 60 * 1000) // 24 hours
    };
    localStorage.setItem('longevityScreenerProgress', JSON.stringify(data));
  } catch (e) {
    console.error('Failed to save progress:', e);
  }
}

function loadScreenerProgress() {
  try {
    const stored = localStorage.getItem('longevityScreenerProgress');
    if (!stored) return null;

    const data = JSON.parse(stored);

    // Check if expired
    if (data.expiresAt && Date.now() > data.expiresAt) {
      localStorage.removeItem('longevityScreenerProgress');
      return null;
    }

    return data.formData;
  } catch (e) {
    console.error('Failed to load progress:', e);
    return null;
  }
}

document.addEventListener('DOMContentLoaded', function() {
  // Check if user has completed results, redirect to results page
  try {
    const stored = localStorage.getItem('longevityScreenerResults');
    if (stored) {
      const data = JSON.parse(stored);
      // Check if results are still valid (not expired)
      if (!data.expiresAt || Date.now() <= data.expiresAt) {
        // Mark as completed in case it wasn't tracked before
        if (window.WithstainCTATracking) {
          window.WithstainCTATracking.markToolCompleted('longevity-screener');
        }
        window.location.href = '/tools/longevity-screener/results/';
        return;
      } else {
        // Clean up expired results
        localStorage.removeItem('longevityScreenerResults');
      }
    }
  } catch (e) {
    console.error('Error checking for existing results:', e);
  }

  // Step navigation
  let currentStep = 1;
  const totalSteps = 5;
  const form = document.getElementById('screener-form');
  const progressFill = document.getElementById('progress-fill');
  const currentStepEl = document.getElementById('current-step');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const submitBtn = document.getElementById('submit-btn');

  function updateStep(shouldScroll = true) {
    // Hide all steps
    document.querySelectorAll('.step').forEach(step => {
      step.style.display = 'none';
    });

    // Show current step
    const activeStep = document.querySelector(`[data-step="${currentStep}"]`);
    if (activeStep) {
      activeStep.style.display = 'block';
    }

    // Update progress
    currentStepEl.textContent = currentStep;
    const progress = ((currentStep - 1) / totalSteps) * 100;
    progressFill.style.width = progress + '%';

    // Update button visibility
    if (currentStep === 1) {
      prevBtn.style.visibility = 'hidden';
    } else {
      prevBtn.style.visibility = 'visible';
    }

    if (currentStep === totalSteps) {
      nextBtn.style.display = 'none';
      submitBtn.style.display = 'inline-block';
    } else {
      nextBtn.style.display = 'inline-block';
      submitBtn.style.display = 'none';
    }

    // Scroll to top of screener container to show progress bar (only when navigating)
    if (shouldScroll) {
      setTimeout(() => {
        const quizContainer = document.getElementById('quiz-container');
        if (quizContainer) {
          quizContainer.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      }, 50);
    }
  }

  // Next button
  nextBtn.addEventListener('click', () => {
    if (currentStep < totalSteps) {
      currentStep++;
      updateStep();
    }
  });

  // Previous button
  prevBtn.addEventListener('click', () => {
    if (currentStep > 1) {
      currentStep--;
      updateStep();
    }
  });

  // Save progress on any change
  function saveProgress() {
    const formData = new FormData(form);
    const progressData = {};
    for (let [key, value] of formData.entries()) {
      progressData[key] = value;
    }
    saveScreenerProgress(progressData);
  }

  // Auto-scroll to next question on answer
  form.addEventListener('change', (e) => {
    if (e.target.type === 'radio') {
      // Save progress
      saveProgress();

      const currentQuestionBlock = e.target.closest('.question-block');
      const nextQuestionBlock = currentQuestionBlock.nextElementSibling;

      if (nextQuestionBlock && nextQuestionBlock.classList.contains('question-block')) {
        setTimeout(() => {
          nextQuestionBlock.scrollIntoView({
            behavior: 'smooth',
            block: 'center'
          });
        }, 300);
      }
    }
  });

  // Form submission
  form.addEventListener('submit', (e) => {
    e.preventDefault();

    // Calculate scores
    const formData = new FormData(form);
    const scores = {
      nutrition: 0,
      exercise: 0,
      sleep: 0,
      emotional: 0,
      social: 0
    };

    // Nutrition: q1-q4
    scores.nutrition = ['q1', 'q2', 'q3', 'q4'].reduce((sum, q) =>
      sum + parseInt(formData.get(q) || 0), 0);

    // Exercise: q5-q8
    scores.exercise = ['q5', 'q6', 'q7', 'q8'].reduce((sum, q) =>
      sum + parseInt(formData.get(q) || 0), 0);

    // Sleep: q9-q11b
    scores.sleep = ['q9', 'q10', 'q11', 'q11b'].reduce((sum, q) =>
      sum + parseInt(formData.get(q) || 0), 0);

    // Emotional: q12-q15
    scores.emotional = ['q12', 'q13', 'q14', 'q15'].reduce((sum, q) =>
      sum + parseInt(formData.get(q) || 0), 0);

    // Social: q16-q19
    scores.social = ['q16', 'q17', 'q18', 'q19'].reduce((sum, q) =>
      sum + parseInt(formData.get(q) || 0), 0);

    // Save results to localStorage
    saveScreenerResults(scores);

    // Clear progress since we're done
    localStorage.removeItem('longevityScreenerProgress');

    // Mark screener as completed for CTA tracking
    if (window.WithstainCTATracking) {
      window.WithstainCTATracking.markToolCompleted('longevity-screener');
    }

    // Navigate to results page
    window.location.href = '/tools/longevity-screener/results/';
  });

  // Load saved progress
  function loadProgress() {
    const savedProgress = loadScreenerProgress();
    if (savedProgress) {
      // Restore form values
      for (let [questionName, value] of Object.entries(savedProgress)) {
        const input = document.querySelector(`input[name="${questionName}"][value="${value}"]`);
        if (input) {
          input.checked = true;
        }
      }

      // Determine which step to show based on last answered question
      const questionNumbers = Object.keys(savedProgress).map(q => {
        const match = q.match(/\d+/);
        return match ? parseInt(match[0]) : 0;
      });
      const lastQuestion = Math.max(...questionNumbers);

      // Map question numbers to steps
      if (lastQuestion >= 16) currentStep = 5;
      else if (lastQuestion >= 12) currentStep = 4;
      else if (lastQuestion >= 9) currentStep = 3;
      else if (lastQuestion >= 5) currentStep = 2;
      else currentStep = 1;
    }
  }

  // Initialize
  loadProgress();
  updateStep(false); // Don't scroll on initial page load
});
</script>

