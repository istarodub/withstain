<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}Withstain</title>
  <meta name="description" content="{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}">

  <!-- Canonical URL -->
  <link rel="canonical" href="https://withstain.com{{ page.url }}">

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="{% if layout == 'post.njk' %}article{% else %}website{% endif %}">
  <meta property="og:url" content="https://withstain.com{{ page.url }}">
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}Withstain">
  <meta property="og:description" content="{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}">
  <meta property="og:image" content="https://withstain.com{% if ogImage %}{{ ogImage }}{% else %}/og-image.png{% endif %}">
  <meta property="og:site_name" content="Withstain">
  <meta property="og:locale" content="en_US">
  {% if layout == 'post.njk' %}
  <meta property="article:published_time" content="{{ date | date }}">
  <meta property="article:modified_time" content="{{ date | date }}">
  {% if tags and tags.length > 0 %}<meta property="article:section" content="{{ tags[0] | formatTag }}">{% endif %}
  {% if tags %}{% for tag in tags %}<meta property="article:tag" content="{{ tag | formatTag }}">{% endfor %}{% endif %}
  {% endif %}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:url" content="https://withstain.com{{ page.url }}">
  <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}Withstain">
  <meta name="twitter:description" content="{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}">
  <meta name="twitter:image" content="https://withstain.com{% if twitterImage %}{{ twitterImage }}{% elif ogImage %}{{ ogImage }}{% else %}/og-image.png{% endif %}">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-N90BC7ECG6"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-N90BC7ECG6');
  </script>

  <!-- Structured Data -->
  {% if layout == 'post.njk' %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "{{ title }}",
    "description": "{{ description }}",
    "image": "https://withstain.com{% if ogImage %}{{ ogImage }}{% else %}{{ image }}{% endif %}",
    "datePublished": "{{ date | date }}",
    "dateModified": "{{ date | date }}",
    {% if tags and tags.length > 0 %}"articleSection": "{{ tags[0] | formatTag }}",
    "keywords": [{% for tag in tags %}"{{ tag | formatTag }}"{% if not loop.last %}, {% endif %}{% endfor %}],
    {% endif %}"author": {
      "@type": "Organization",
      "name": "Withstain",
      "url": "https://withstain.com"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Withstain",
      "logo": {
        "@type": "ImageObject",
        "url": "https://withstain.com/og-image.png"
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "https://withstain.com{{ page.url }}"
    }
  }
  </script>
  {% elif page.url == '/' %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Withstain",
    "url": "https://withstain.com",
    "logo": "https://withstain.com/og-image.png",
    "description": "Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.",
    "foundingDate": "2024"
  }
  </script>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Withstain",
    "description": "Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.",
    "url": "https://withstain.com/",
    "publisher": {
      "@type": "Organization",
      "name": "Withstain"
    }
  }
  </script>
  {% else %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "{% if title %}{{ title }}{% else %}Withstain{% endif %}",
    "description": "{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}",
    "url": "https://withstain.com{{ page.url }}",
    "isPartOf": {
      "@type": "WebSite",
      "name": "Withstain",
      "url": "https://withstain.com"
    }
  }
  </script>
  {% endif %}

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Google Fonts - Montserrat -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">

  <!-- Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/cta-tracking.js"></script>
</head>
<body class="bg-zinc-900 text-zinc-100 min-h-screen flex flex-col antialiased">
  <!-- Navigation -->
  <header class="sticky top-0 bg-zinc-900/80 backdrop-blur-sm z-50 border-b border-zinc-700">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <a href="/" class="flex items-center gap-3 text-2xl font-bold text-lime-300 transition-opacity hover:opacity-80 uppercase tracking-widest">
          <svg width="28" height="32" viewBox="79.888 107.974 43.035 49.000" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="m 122.04986,122.55394 c 1.5676,7.94646 1.3129,15.22377 -3.16983,22.25291 -4.15285,5.87697 -10.77318,10.40034 -17.90067,11.96759 -1.309368,0.17855 -1.953468,0.23841 -3.271168,0.17533 -0.35494,-9.82002 3.022788,-18.60503 9.729638,-25.83175 3.46398,-3.64921 9.22712,-8.56408 14.61203,-8.56408 z" />
            <path d="m 81.304032,123.08311 c 9.08019,0.76704 17.291045,6.88559 19.973108,10.8462 -2.784057,3.39101 -4.990176,8.86996 -5.801005,12.83536 -0.810829,3.9654 -0.833008,6.14845 -0.901848,9.23414 -2.35964,-1.34178 -1.904755,-1.37458 -3.136705,-2.21318 -9.08754,-6.92285 -14.20524,-20.3823 -10.13355-30.70252 z" />
            <circle cx="102.00698" cy="116.86861" r="8.8945131" />
          </svg>
          Withstain
        </a>

        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center space-x-4">
          <a href="/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Home</a>
          <a href="/articles/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Insights</a>
          <a href="/tools/longevity-screener/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Tools</a>
          <a href="/about/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">About</a>
          <a href="/contact/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Contact</a>
        </nav>

        <!-- Mobile menu button -->
        <button id="mobile-menu-button" class="md:hidden p-2 text-lime-300 hover:bg-zinc-800 rounded-md transition-colors">
          <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <nav id="mobile-menu" class="hidden md:hidden absolute top-20 left-0 right-0 bg-zinc-900/95 backdrop-blur-sm border-b border-zinc-700 shadow-lg">
        <div class="container mx-auto px-4 py-4 flex flex-col space-y-2">
          <a href="/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Home</a>
          <a href="/articles/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Insights</a>
          <a href="/tools/longevity-screener/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Tools</a>
          <a href="/about/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">About</a>
          <a href="/contact/" class="px-3 py-2 text-sm font-medium transition-all duration-200 rounded-md uppercase tracking-wider text-zinc-300 hover:bg-zinc-800 hover:text-lime-300">Contact</a>
        </div>
      </nav>
    </div>
  </header>

  {% if isHomePage %}
  <!-- Hero Section with Video Background (Home page only) -->
  <section class="relative h-[60vh] md:h-[70vh] flex items-center justify-center text-center -mx-4 sm:-mx-6 lg:-mx-8">
    <video autoplay loop muted playsinline class="absolute top-0 left-0 w-full h-full object-cover z-0" poster="/videos/hero-poster.jpg" id="heroVideo">
      <source src="/videos/hero-background-smooth.mp4" type="video/mp4">
    </video>
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-t from-zinc-900 via-zinc-900/60 to-transparent z-10"></div>
    <div class="relative z-20 px-4 fade-in flex flex-col items-center">
      <h1 class="text-5xl md:text-8xl font-extrabold tracking-tighter mb-4 animated-gradient uppercase">Withstain</h1>
      <p class="max-w-3xl mx-auto text-lg md:text-xl text-zinc-300 mb-8">
        Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.
      </p>
    </div>

    <!-- CTA Cards at bottom of hero -->
    <div class="absolute bottom-0 left-0 right-0 z-20 pb-8 px-4">
      <div class="hero-cta-cards">
        <a href="/tools/longevity-screener/" class="hero-cta-card">
          <span class="material-icons hero-cta-icon">assessment</span>
          <div class="hero-cta-text">
            <h3>Assess Your Habits</h3>
            <p>2-minute screener across 5 key health pillars</p>
          </div>
          <span class="material-icons hero-cta-arrow">arrow_forward</span>
        </a>

        <a href="/articles/" class="hero-cta-card">
          <span class="material-icons hero-cta-icon">article</span>
          <div class="hero-cta-text">
            <h3>Read Latest Articles</h3>
            <p>Evidence-based insights on longevity</p>
          </div>
          <span class="material-icons hero-cta-arrow">arrow_forward</span>
        </a>
      </div>
    </div>
  </section>
  {% endif %}

  <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    {{ content | safe }}
  </main>

  <footer class="border-t border-zinc-700">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 text-center text-zinc-500 text-sm">
      <p>&copy; {{ page.date | getYear }} Withstain. All rights reserved.</p>
      <p class="mt-1">Practical, resilient longevity through modern science.</p>
    </div>
  </footer>

  <script>
    // Slow down hero video
    const heroVideo = document.getElementById('heroVideo');
    if (heroVideo) {
      heroVideo.playbackRate = 0.5;
    }

    // Glow Card Effect
    document.querySelectorAll('.glow-card').forEach(card => {
      card.addEventListener('mousemove', e => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        card.style.setProperty('--mouse-x', `${x}px`);
        card.style.setProperty('--mouse-y', `${y}px`);
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          const headerOffset = 80;
          const elementPosition = target.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      });
    });

    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });

      // Close mobile menu when clicking a link
      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          menuIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
        });
      });
    }
  </script>
</body>
</html>
