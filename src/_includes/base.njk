<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}Withstain</title>
  <meta name="description" content="{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}">

  <!-- Canonical URL -->
  <link rel="canonical" href="https://withstain.com{{ page.url }}">

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="{% if layout == 'post.njk' %}article{% else %}website{% endif %}">
  <meta property="og:url" content="https://withstain.com{{ page.url }}">
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}Withstain">
  <meta property="og:description" content="{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}">
  <meta property="og:image" content="https://withstain.com{% if ogImage %}{{ ogImage }}{% else %}/og-image.png{% endif %}">
  <meta property="og:site_name" content="Withstain">
  <meta property="og:locale" content="en_US">
  {% if layout == 'post.njk' %}
  <meta property="article:published_time" content="{{ date | date }}">
  <meta property="article:modified_time" content="{{ date | date }}">
  {% if tags and tags.length > 0 %}<meta property="article:section" content="{{ tags[0] | formatTag }}">{% endif %}
  {% if tags %}{% for tag in tags %}<meta property="article:tag" content="{{ tag | formatTag }}">{% endfor %}{% endif %}
  {% endif %}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:url" content="https://withstain.com{{ page.url }}">
  <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}Withstain">
  <meta name="twitter:description" content="{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}">
  <meta name="twitter:image" content="https://withstain.com{% if twitterImage %}{{ twitterImage }}{% elif ogImage %}{{ ogImage }}{% else %}/og-image.png{% endif %}">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-N90BC7ECG6"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-N90BC7ECG6');
  </script>

  <!-- Structured Data -->
  {% if layout == 'post.njk' %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "{{ title }}",
    "description": "{{ description }}",
    "image": "https://withstain.com{% if ogImage %}{{ ogImage }}{% else %}{{ image }}{% endif %}",
    "datePublished": "{{ date | date }}",
    "dateModified": "{{ date | date }}",
    {% if tags and tags.length > 0 %}"articleSection": "{{ tags[0] | formatTag }}",
    "keywords": [{% for tag in tags %}"{{ tag | formatTag }}"{% if not loop.last %}, {% endif %}{% endfor %}],
    {% endif %}"author": {
      "@type": "Organization",
      "name": "Withstain",
      "url": "https://withstain.com"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Withstain",
      "logo": {
        "@type": "ImageObject",
        "url": "https://withstain.com/og-image.png"
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "https://withstain.com{{ page.url }}"
    }
  }
  </script>
  {% elif page.url == '/' %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Withstain",
    "url": "https://withstain.com",
    "logo": "https://withstain.com/og-image.png",
    "description": "Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.",
    "foundingDate": "2024"
  }
  </script>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Withstain",
    "description": "Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.",
    "url": "https://withstain.com/",
    "publisher": {
      "@type": "Organization",
      "name": "Withstain"
    }
  }
  </script>
  {% else %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "{% if title %}{{ title }}{% else %}Withstain{% endif %}",
    "description": "{% if description %}{{ description }}{% else %}Practical, resilient longevity through modern science, discipline, and evidence-based self-optimization.{% endif %}",
    "url": "https://withstain.com{{ page.url }}",
    "isPartOf": {
      "@type": "WebSite",
      "name": "Withstain",
      "url": "https://withstain.com"
    }
  }
  </script>
  {% endif %}

  <!-- Google Fonts - Merriweather and Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/cta-tracking.js"></script>
</head>
<body>
  <!-- Navigation -->
  <header class="site-header">
    <nav class="site-nav">
      <a href="/" class="site-logo">
        <img src="/assets/symbol.svg" alt="Withstain" class="site-logo-symbol">
        <span>Withstain</span>
      </a>

      <button class="mobile-menu-button" id="mobile-menu-button" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <ul class="nav-menu" id="nav-menu">
        <li><a href="/">Home</a></li>
        <li><a href="/articles/">Articles</a></li>
        <li><a href="/tools/longevity-screener/">Tools</a></li>
        <li><a href="/about/">About</a></li>
        <li><a href="/contact/">Contact</a></li>
      </ul>
    </nav>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <p>&copy; {{ page.date | getYear }} Withstain. All rights reserved.</p>
    <p>Practical, resilient longevity through modern science.</p>
  </footer>

  <script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const navMenu = document.getElementById('nav-menu');

    if (mobileMenuButton && navMenu) {
      mobileMenuButton.addEventListener('click', () => {
        navMenu.classList.toggle('active');
        mobileMenuButton.classList.toggle('active');
      });

      // Close mobile menu when clicking a link
      navMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          navMenu.classList.remove('active');
          mobileMenuButton.classList.remove('active');
        });
      });
    }

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          const headerOffset = 80;
          const elementPosition = target.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      });
    });

    // Add border to header on scroll
    const siteHeader = document.querySelector('.site-header');
    let lastScrollY = window.scrollY;

    function updateHeaderBorder() {
      if (window.scrollY > 10) {
        siteHeader.classList.add('scrolled');
      } else {
        siteHeader.classList.remove('scrolled');
      }
    }

    window.addEventListener('scroll', () => {
      requestAnimationFrame(updateHeaderBorder);
    });

    // Check on load
    updateHeaderBorder();
  </script>
</body>
</html>
